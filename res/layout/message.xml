<com.weibox.aviationexhibition.SlideHolder xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/slideHolderMessage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MessageActivity" >

    <include layout="@layout/menu" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fafafa"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_banner" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="留言"
                        android:textColor="@android:color/white"
                        android:textSize="25sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:alpha="0.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="今天"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ListView
                    android:id="@+id/todayMsgList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    >
                </ListView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:alpha="0.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="昨天"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ListView
                    android:id="@+id/ytdMsgList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp" >
                </ListView>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:alpha="0.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="更早"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ListView
                    android:id="@+id/earlierMsgList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp" >
                </ListView>
            </LinearLayout>
        </ScrollView>

        <ImageButton
            android:id="@+id/ibtnLeaveMsg"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_leave_new_message" />
    </RelativeLayout>

</com.weibox.aviationexhibition.SlideHolder>